# HomeWizard Lite API Configuration
# Copy this file to .env and fill in your actual values

# HomeWizard Lite Account Credentials (REQUIRED)
HWL_USERNAME=your_homewizard_email@example.com
HWL_PASSWORD=your_homewizard_password

# Smart Plug Configuration (REQUIRED)
# Get this ID by calling /api/smartplug endpoint after setting up credentials
SMARTPLUG_ID=your_main_smartplug_id

# Server Configuration (OPTIONAL)
PORT=3033
MIN_DIMMING_VALUE=1
CACHE_TTL=1800
LOGLEVEL=warn

# Authentication Configuration (OPTIONAL)
# Request timeout in milliseconds (5000-60000, default: 15000)
AUTH_TIMEOUT=15000
# Maximum retry attempts (1-10, default: 3)
AUTH_MAX_RETRIES=3
# Base retry delay in milliseconds for exponential backoff (1000-10000, default: 2000)
AUTH_RETRY_DELAY=2000